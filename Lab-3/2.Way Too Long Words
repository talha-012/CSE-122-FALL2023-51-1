#include<stdio.h>

int main()
{
    int i,n;
    char word[100];

    scanf("%d",&n);

    for(i=1;i<=n;i++){
        scanf("%s",&word);
        if(strlen(word)>10){
            printf("%c%d%c\n",word[0],strlen(word)-2,word[strlen(word)-1]);
        }else{
            printf("%s\n",word);
        }
    }

    return 0;
}
